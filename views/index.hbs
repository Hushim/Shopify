<div class="index-page">
  <section class="hero is-primary hero-container">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Shopify
        </h1>
        <div class="control has-icons-right" id="search-bar">
          <input class="input is-rounded" type="text" placeholder="Search shopping..." id="search-input">
          <span class="icon is-small is-right" >
            <i class="fa fa-search " aria-hidden="true"></i>
          </span>
          <div id="search-btn">
            <a class="button is-large" id="search_btn">S</a>
          </div>

        </div>
      </div>
    </div>
  </section>


  <div>
    <ul >
      {{#each items}}
      <li id="task_{{this._id}}" class="list-item-card">
        <div class="h_content">
          <!-- 1st -->
          <div class="card card-container">
            <div class="card-content" id="h_cardc">
              <div class="card-image" id="task_{{this._id}}">
                <figure class="h_image" style="cursor: pointer;">
                  <img src="/getPhotoImage/{{this.imageId}}" alt="Placeholder image">
                </figure>
              </div>
              <div class="media" id="item-detail">
                <div class="media-left" id="profile-pic">
                  <figure class="image is-48x48">
                    <img src={{this.userInfo.picture}} alt="Placeholder image">
                  </figure>
                </div>
                <div class="media-content" id="h_media">
                  <p class="title is-3" id="item-id"><a><u>{{this.title}}</u></a></p>
                  <p class="subtitle is-6"><span>By: {{this.userInfo.nickname}}</span></p>
                </div>
              </div>
              <div class="item-description">
                <p class="description">{{this.description}}</p>
              </div>
              <div class="item-price">
                <p class="price"><span>Price:</span>{{this.price}}</p>
              </div>
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
